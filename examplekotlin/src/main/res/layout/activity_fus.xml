<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="io.chthonic.mythos2.example.ui.viewmodel.FusViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        tools:context=".ui.activity.FusActivity"
        android:background="#FC6C85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FUS instance count (View, ViewModel) = "
            android:id="@+id/fus_text_descript"
            tools:ignore="MissingConstraints"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fus_text_view"
            android:text=""
            android:textColor="@android:color/black"
            tools:ignore="MissingConstraints"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fus_text_viewmodel"
            android:text="@{viewmodel.liveViewModelInstanceCount}"
            android:textColor="@android:color/black"
            tools:ignore="MissingConstraints"
            />

        <androidx.constraintlayout.helper.widget.Flow
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/fus_text"
            app:constraint_referenced_ids="fus_text_descript,fus_text_view,fus_text_viewmodel"
            app:flow_wrapMode="chain"
            app:flow_horizontalStyle="packed"
            app:flow_verticalStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:flow_horizontalBias="0.0"
            app:flow_firstVerticalBias="0.5"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_toggle_ro"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="toggle ro"
            app:layout_constraintTop_toBottomOf="@id/fus_text"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@id/button_toggle_ro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_toggle_dah"
            android:layout_gravity="right"
            android:gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="toggle dah"
            app:layout_constraintTop_toBottomOf="@id/fragment_container"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/layout_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:layout_constraintTop_toBottomOf="@id/button_toggle_dah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <io.chthonic.mythos2.example.ui.layout.DahLayout
                android:id="@+id/dah_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
